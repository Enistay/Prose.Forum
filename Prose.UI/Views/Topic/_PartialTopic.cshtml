@model Prose.UI.Models.TopicCreate

@Html.AntiForgeryToken()

<div class="container">
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible text-center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            Successfully Edited Topic!
        </div>
    }
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="prose-div-form form-login">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">@ViewBag.Title</div>
            </div>

            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="result" class="alert
                    alert-danger col-sm-12">
                </div>

                <div class="form-group">
                    <div class="col-sm-10">

                        @Html.EditorFor(model => model.Title, new
                        {
                            htmlAttributes =
                             new
                             {
                                 @class = "form-control",
                                 placeholder = "Title",
                                 autofocus = true
                             }
                        })

                        @Html.ValidationMessageFor(model => model.Title, "",
                        new { @class = "prose-div-text-danger text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-10">

                        @Html.TextAreaFor(model => model.Text, 10, 141, new
                   {
                       htmlAttributes =
                             new
                             {
                                 @class = "form-control",
                                 placeholder = "Text",
                                 autofocus = true,
                                 style = "width: 100%; max-width: 100%;"
                             }
                   })


                        @Html.ValidationMessageFor(model => model.Text, "",
                        new { @class = "prose-div-text-danger text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-10">

                        @Html.EditorFor(model => model.Keyword, new
                   {
                       htmlAttributes =
                             new
                             {
                                 @class = "form-control input-lg",
                                 placeholder = "Keyword",
                                 autofocus = true
                             }
                   })
                        @Html.ValidationMessageFor(model => model.Keyword, "",
                        new { @class = "prose-div-text-danger text-danger" })
                    </div>
                </div>

                @Html.HiddenFor(model => model.TopicId)

                <div style="margin-top:10px" class="form-group">

                    <div class="prose-form-btn col-sm-10 controls">
                        <input type="submit" value="Submit"
                               class="btn btn-success btn-lg" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

